- content_for :scripts do
  = javascript_pack_tag 'show_blog'
- content_for :styles do
  = stylesheet_pack_tag 'show_blog'

#show-blog-app{data: {issues: issues_data, blog: current_blog, blogs: blogs_data, comments: comments_data}, ':style': "{height: height + 'px'}", 'v-loading': 'loading', 'element-loading-text': '加载中'}
  .root{'v-if': 'blog'}
    .blog-title.clearFloat
      %el-row
        %el-col{':span': 18}
          %el-input#blog-title.big-label{'v-if': 'policy.title && blog.can_edit', 'v-model': 'blog.title', '@blur': "update('title')"}
          %label.big-label{'v-else': 'policy.title', '@click': "openPolicy('title')"}
            {{ blog.title }}
        %el-col{':span': 6}
          %el-button.floatRight{'v-if': 'blog.can_edit', type: 'danger', '@click': 'deleteBlog'}
            删除
    .block-title.clearFloat
      %span.author
        %img{':title': "'作者: ' + blog.author.username", ':src': "blog.author.avatar_url"}
        %a{href: 'blog.author.web_url'}
          {{ blog.author.name }}
      %span.date
        创建于 {{ dateStr(blog.created_at) }}
        更新于 {{ dateStr(blog.updated_at) }}
      %i.el-icon-edit.title-icon.floatRight{'@click': "openPolicy('code')", 'v-if': 'blog.can_edit'}
    %md-wrapper{'v-if': 'blog', 'v-model': 'blog.code', '@save': "update('code')", ':project': 'blog.project_id', ':preview': '!policy.code', ':box-shadow': 'false', 'v-loading': 'codeLoading', 'element-loading-spinner': 'el-icon-loading', 'element-loading-text': '加载中'}
    .block-title
      评论
      %i.el-icon-loading{'v-if': 'commentsLoading'}

:css
  #show-blog-app {
    overflow-y: auto;
  }

  .root > * {
    width: 80%;
    margin: 20px auto;
    min-width: 500px;
  }

  .big-label {
    font-size: 26px;
    font-weight: 600;
  }

  .block-title {
    font-size: 16px;
    border-bottom: 1px solid #e6e6e6;
    padding-bottom: 5px;
    padding-left: 10px;
  }

  .title-icon {
    padding: 5px;
  }

  .author > img {
    width: 16px;
    height: 16px;
  }

  .date {
    font-style: italic;
    color: #909399;
  }