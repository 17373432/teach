- content_for :scripts do
  = javascript_pack_tag 'issues'
- content_for :styles do
  = stylesheet_pack_tag 'issues'

#issues-app{data: issues_data, 'v-loading': 'loading', 'element-loading-text': '加载中'}
  #filter
    %issues-filter
  %el-container
    %el-aside{':width': "asideWidth + 'px'"}
      %issues-list{':issues': 'issues', ':total-height': 'height'}
    %el-main
      %sidebar{':detail-issue': 'curIssue', ':raw-issue': 'rawIssue', ':detail-index': 'detailIndex', ':total-height': 'height'}

:css
  .el-main {
    padding: 0;
  }
