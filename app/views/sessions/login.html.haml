- content_for :title do
  login
- content_for :scripts do
  = javascript_pack_tag 'login'
- content_for :styles do
  = stylesheet_pack_tag 'login'

#login
  %img{src: '/logo/gitlab-icon-rgb.svg'}
  %el-button{'@click': "redirectToGitlab('#{gitlab_auth_url('student')}')"}
    学生登录
  %el-button{'@click': "redirectToGitlab('#{gitlab_auth_url('teacher')}')"}
    教师登录

:css
  #login {
    margin: auto;
    text-align: center;
    width: 400px;
  }

  #login a {
    text-decoration: none;
  }